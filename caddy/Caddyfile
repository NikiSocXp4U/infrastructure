{$SITE_ADDRESS} {
    # Reverse proxy to the dynmap
    reverse_proxy / http://mc:8123

    route /prometheus/* {
        basicauth {
            prometheus {$PROMETHEUS_HASHED_PASSWORD}
        }
        route /prometheus/minecraft/metrics {
            rewrite * /metrics
            reverse_proxy http://mc-exporter:8000
        }
        route /prometheus/node/metrics {
            rewrite * /metrics
            reverse_proxy http://node-exporter:9100
        }
    }

    route /fluent-bit {
        basicauth {
            prometheus {$PROMETHEUS_HASHED_PASSWORD}
        }
        reverse_proxy http://fluent-bit
    }

    # gzip our data for good luck
    encode zstd gzip
}